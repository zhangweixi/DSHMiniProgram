/* 父级 */
page{
  background-color: #f5f5f5;
}
 
/* 外层视图 */
.cont{ 
  width: 100%; 
  margin: 0 auto; 
} 
 
.list{ 
  position: relative; 
  /*height: 170rpx; */
  margin: 20rpx; 
  border-radius: 10rpx;
  line-height: 170rpx; 
  overflow: hidden; 

} 

/* 删除外层包裹视图 */
.list_del{ 
  top:0; 
  display: flex;
} 



.list_del.txt{ 
  position: relative;
  background-color: #fff; 
  width: 100%; 
  z-index: 5; 
  padding:10rpx 0;
  transition: left 0.2s ease-in-out; 
  /*white-space:nowrap; */
  overflow:hidden; 
  text-overflow:ellipsis; 
} 

/* 删除 */
.list_del.del{ 
  position: absolute;
  right: 0; 
  z-index: 0; 
  width: 180rpx;
  height:100%;
  
  display: block;
  /*background-color: #e64340; */
  color: #fff;
  display: flex;
  align-items: center;
} 

.list_del.del text{
  flex: 1;
}

.list_del.del image{
  
  width:50rpx;
}

/* 列表图片 */
.list_img{ 
    
    width: 90rpx;
    /*height:170rpx;*/
    border-radius: 10rpx;
    margin-left: 20rpx;
    margin-right:20rpx;
} 

.list_img image{
  width:100%;
}
 
 
.list-info{
  flex:1;
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}

.list-info text{

  display: block;
}

/* 列表标题 */
.list_title{
  font-size: 0.9rem;
  line-height: 2;
  color: #505050;
  
}

.gray{

  background:#F3F3F3;
  margin-right:20rpx;
  padding:10rpx 20rpx;
}
 
 /* 列表内容 */
.list_content{
  line-height: 1.5;
  font-size: .8rem;
  flex: 1;
  color:#8A8A8A;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

/* 活动时间 */
.list_datas{
  font-size: .7rem;
  line-height: 1.5;
  color: #818181;
  text-align: right;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

 
 
 
 
