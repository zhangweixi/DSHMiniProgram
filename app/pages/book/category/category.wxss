/* pages/book/category/category.wxss */
.categorys {
    width:100%;
    white-space:nowrap;
    position: fixed;
    top:0;
    left:0;
    border-bottom: 1px solid rgba(12, 0, 51, 0.1);
    padding-bottom:15rpx;
    background:#fff;
}

.categorys text{
    padding:6rpx 0px;
    margin:0px 20rpx;
    display: inline-block;
    color:#505050;
    line-height:1.5;   
    font-size:1.1rem; 
    border-bottom:3px solid rgba(0,0,0,0);
}

.categorys text.selected{

    color:#151515;
    font-weight: 600;
    border-bottom:3px solid #FFB800;
}

.books{
    margin:5%;
    margin-bottom:0;
    margin-top:120rpx;
    display: flex;
    align-content: flex-start;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
}


.bookinfo{
    width:30%;
    margin-bottom:30rpx;
}


.bookinfo image{
    width:100%;

}

.bookinfo .title{
    margin-top:10rpx;
    text-align: center;
    font-size:1.1rem;
    display: block;
    line-height: 1.5;
    color:#505050;
}

