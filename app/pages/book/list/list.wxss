/* pages/book/list/list.wxss */
@import "/template/bookinfo/bookinfo.wxss"

.page-title .title-icon {
  width: 40rpx;
  margin-left: 40rpx;
}
.page-title navigator{
  display: flex;
  align-items: center;
}
.week-book {
  position: relative;
}
.week-book .bg-img {
  width: 100%;
  display: block;
}

.book-box{
  top:0;
  left:0;
  width:100%;
  height:100%;
  position: absolute;
  display: flex;
}

.book-content {
  flex: 1;
  display: flex;
  margin:15px 0 15px 15px;
}


.book-content .book-img {

  text-align: center;
  display: flex;
  text-align: center;
  align-items: center;

}

.book-content .book-img image {
  display: block;
  width:20vw;
}

.book-content .book-text-info{
  flex: 1;
  margin-left:20px;
  color:#fff;
  position: relative;
  height:100%;
  /*background:red;*/
}

.book-text-info .category{
  display: inline-block;
  border-right:5px solid rgba(181,161,113,.5);
  font-size:.8rem;
  margin-top:10rpx;
  box-sizing: content-box;
}

.book-text-info .category text{
  background: #B5A171;
  display: block;
  padding:2px 3px;
}


.book-text-info .title{
  line-height:1;
  margin-top:20px;
  margin-bottom:10px;
  font-size:1.3rem;

}

.book-text-info .sub-title{
  font-size:1rem;
  line-height:1;
}

.book-text-info .read-num{
  display: flex;
  align-items: center;
  line-height:25px;
  position: absolute;
  bottom:0px;
}

.book-text-info .read-num image{
  width:18px;
  margin-right:10px;
}

.book-text-info .read-num text{
  font-size:0.8rem;
}

