/* pages/readparty/memdetail/memdetail.wxss */
.head-box{
	width:100%;
	position: relative;	
	overflow: hidden;
	height:60vw;
}	


.bg-box{
	overflow:hidden;
	position:relative;
	top:0;
	width:100%;
	height:100%;
}

.bg{
	position: absolute;
	width:100%;
	height:100%;
    left:0;
    top:0;
    z-index: 1;
    filter: blur(10px) opacity(80%);
    transform: scale(2);
}

.container{
	z-index: 100;
	width:100%;
	color:#fff;
	top:0;
	position: absolute;
	text-align: center;
}


.head{
	width:120rpx;
	height:120rpx;
	border-radius: 50%;
	margin:auto;
	overflow: hidden;
	margin-top:40rpx;
	border:1px solid #fff;
}

.name{
	font-size:1.1rem;
	line-height: 2;
}

.join-time{
	font-size: 0.8rem;
	line-height: 1.5;
}

.data-detail{
	display: flex;
}

.flex1{

	flex:1;
	margin-top:30rpx;
	font-size:.8rem;
} 

.flex1 text{
	font-size:1.1rem;
	margin-right:5rpx;
}

.flex1 .desc{
	
	line-height: 2;
}

form{
	margin-top:30rpx;
	overflow: hidden;
	display: block;
}

.page-title{
	margin-bottom: 20rpx;
}

.u-info{
	display: flex;
	border-bottom: 1px solid #E3E3E3;
	padding:30rpx 0;
	align-items: center;
	color:#8A8A8A;
	position: relative;
}

.u-info input,.u-info picker{
	margin-left: 20rpx;
	flex:1;
	text-align: left;
	color:#151515;
}

.u-info image{
	width:30rpx;
	margin-left: 15rpx;
	margin-right:10rpx;
}

.u-info image.picker-icon{
	position: absolute;
	right:0;
	z-index: -10;
}

.btn{
	margin:auto;
	margin-top: 50rpx;
	width:50vw;
}

.btn button{
	background: #FFB800;
	color:#fff;
}