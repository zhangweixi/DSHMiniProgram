/* pages/readparty/detail/detail.wxss */
.icon-member{
	overflow: hidden;
}
.icon-member image{
	display: block;
	width:60rpx;
	float: right;
	margin:20rpx 40rpx;
}	

.navs{
	padding:10rpx 60rpx;
	padding-bottom:40rpx;
	display: flex;
	clear: both;
	border-bottom:1px solid RGBA(12, 0, 51, 0.1);
}

.navs navigator{
	flex:1;
	margin:0 20rpx;
	text-align: center;
}

.navs image{
	display: block;
	width:100rpx;
	margin:auto;
	margin-bottom:10rpx;
}

/*新消息提示*/
.new-message{
	text-align: center;
	
}

.new-message navigator{
	line-height: 50rpx;
	height:50rpx;
	font-size:22rpx;
	padding:15rpx;
	padding-left: 30rpx;
	display: inline-block;
	margin:auto;
	margin-top:20rpx;
	background:#505050;
	align-items: center;
	vertical-align: middle;
	border-radius: 40rpx;
}
.new-message image{
	width:50rpx;
	height:50rpx;
	border-radius: 100%;
	margin-left: -10rpx;
}
.new-message text{
	margin-left: 20rpx;
	margin-right:20rpx;
	font-size:30rpx;
	float: right;
	color:#fff;
}

/*选中的书籍*/
.book{
	margin-top:40rpx;
}


.book view{
	
	border-radius: 10rpx;
	display: inline-block;
	margin-left:40rpx;
	position: relative;
	line-height:2.3rem;
	padding:10rpx 30rpx;
	box-shadow: -1px 1px 2px 2px  #ddd;
}

.book .close{
	position: absolute;
	right:-16rpx;
	top:-16rpx;
	display: block;
	width:35rpx;
}



/*部门*/
.departs {

	white-space:nowrap;

}

.departs view{
	display: inline-block;
	border-bottom:2px solid rgba(0,0,0,0);
	margin:20rpx;
	padding-bottom:8rpx;
	color:#8A8A8A;
}

.departs .selected{
	border-bottom:2px solid #FFB800;
	color:#151515;
}

/*改进计划内容*/
.plan-list{
	display: flex;
	margin-bottom:30rpx;
	overflow: hidden;
}

.plan-list .img image{

	width:80rpx;
	height:80rpx;
	border-radius: 100%;

}

.plan-list .content{
	flex:1;
	margin-left:20rpx;
}

.plan-list .content .name{
	color:#FF9C00;
	line-height: 60rpx;
}

.main-plan > view{
	display: flex;
	margin:10rpx 0;
	color:#151515;
}

.main-plan .title{
	white-space:nowrap;
	color:#C4C4C4;
}

/*中间按钮*/
.hand-btn{
	padding:10rpx 0;
	display: flex;
}

.hand-btn .time{
	color:#C4C4C4;
	font-size:0.9rem;
}

.hand-btn image{
	display: inline-block;
	width:40rpx;
	margin-right:30rpx;
}

/*评论及回复*/

.relay-content{

	background: #F3F3F3;
	padding:20rpx;
	border-radius: 8rpx;
	margin-top:20rpx;
}
.zan-list{
	line-height:1.3rem;
}

.zan-list.zan-border{

	border-bottom:1px solid #E3E3E3;
	padding-bottom: 20rpx;
	margin-bottom: 20rpx;
}

.zan-list image{
	width:30rpx;
	margin-right:10rpx;
}

.replay-list{
	margin-bottom:10rpx;
	line-height:1.3;
}

.replay-list .gray{
	color:#8A8A8A;
}

.input{
	display: block;
	position: fixed;
	z-index: 100;
	bottom:0;
	left: 0;
	width:100%;
	border-top: 1px solid #F3F3F3;
	background: #F9F9F9;
}

input{
	margin:20rpx;
	line-height:50rpx;
	border:1px solid #f3f3f3;
	background:#fff;
	padding:10rpx 0;
	padding-left:10rpx;
	border-radius: 6rpx;
}