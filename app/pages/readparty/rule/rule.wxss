form{
	display: flex;
	flex-direction: column;
	height:100vh;
	width:100%;
}


.input{
	flex:1;
	padding:20rpx;
	height:80vh;
	background: #F2F2F2;
}


textarea{
	display: block;
	color:#8A8A8A;
	width:100%;
	height:100%;
}

.btn{
	height:100rpx;
	margin-top:40rpx;
}

.btn button{
	width:40vw;
	background: #C4C4C4;
	color:#fff;
}

.btn.active button{
	background: #FFB800;
	color:#fff;
}