

.nav-box{

	display: flex;
	padding:0 15rpx;
	padding-top:20rpx;
	justify-content: space-around;
}

.nav-box .topnavs{
	flex:1;
	margin:0 15rpx;
	box-shadow: 2px 2px 10px rgba(211, 211, 211, 0.5),-2px -2px 10px rgba(211, 211, 211, 0.5) ;
}

.nav-box .top{
	padding:30rpx 0 10rpx;
}

/*圆*/
.nav-box .cycle{
	padding:10rpx;
	width:120rpx;
	height:120rpx;
	border-radius: 100%;
	margin:auto;
	border:1px solid #fff;
	text-align: center;
	font-size:1rem;
	color:#fff;
}



.nav-box .midimg{
	width:60rpx;
	margin:auto;
}

.nav-box .subtitle{
	font-size:.9rem;
	text-align: center;
	line-height:40rpx;
	color:#fff;
	padding:15rpx 0;
}


.nav-box .addbtn{

	display: flex;
	align-items: center;
	padding:15rpx 0;
}

.nav-box .addicon{
	width:40rpx;
	margin-right: 10rpx;
}

.flex{
	flex:1;
}

/*内容导航栏*/
.nav-types{
	display: flex;
	margin-top:50rpx;
	margin-bottom: 20rpx;
}

.nav-types  view{
	flex:1;
	text-align: center;
}

.nav-types text{
	display: inline-block;
	line-height: 2;
	border-bottom: 2px solid rgba(0,0,0,0);
	color:#505050;
	font-size: 1.1rem;
}

.nav-types text.selected{
	border-bottom: 2px solid #FFB800;
	color:#151515;
	font-weight: bold;
}


