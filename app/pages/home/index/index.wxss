/* pages/home/index/index.wxss */
.swiper image {
  width: 100%;
  height: auto;
}


.container{
  padding:25rpx;
}


.page-title{
  display: flex;
  /* background:#ccc; */
}

.page-title{
  line-height:1.5rem;
}

.page-title .title{

  font-size:1.2rem;
  color:#151515;
}

.page-title .empty{
  flex: 1;
}

.page-title .detail{
    color:#8A8A8A;
    font-size:.8rem;

}

.lhhd{
  margin-top:20rpx;
}


.lhhd .content{
  
  margin:25rpx 0;
  line-height:50rpx;

}

.lhhd .content image{
  display: inline-block;
  width:40rpx;
  height:40rpx;
  margin-right:10px;
  vertical-align: middle
}

.lhhd .content text{
  color:#151515;
  font-size:.9rem;
}

.yantu{
  margin-top:40rpx;
}

.yantu .content{
  
  margin-top:30rpx;
  background:#F3F3F3;
  padding:35rpx;
  border-radius: 5rpx;
  overflow: hidden;

}

.yantu .content .text-content{
  
  width:80%;
  float: left;
  color:#505050;
  font-size:0.9rem;
  height:100%;
}
.yantu .text-content .text{
  padding-right:35rpx;
  font-size:1rem;
}

.yantu .text-content .time{
  color:#8A8A8A;
  margin-top:30rpx;
  font-size:.8rem;

}

.yantu .content .img-content{

  width:20%;
  float: left;

}



.yantu .img-content image{
  
  width:100%;

}

/*免费专区*/
.free{

    margin-top:40rpx;
}

.free .book-list image.bg-img{


  width:100%;


}

.free .content{
  margin-top:40rpx;
}

.free .book-list{

  position: relative;
  border-radius: 5rpx;
  margin-bottom:20rpx;

}


.free .bg-img{
  display: block;
}

.free .book-info{

  position: absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
  
}

/*文字信息*/
.free .book-text{

  width:75%;
  height:100%;
  float:left;
  color:#fff;

}

/*分类标签*/
.free .tag{
  height:30%;
}


.free .tag .tag-name{

  font-size:.7rem;
  padding-left:10rpx;
  line-height:2.5rem;

  
}


/*标题信息*/
.free .book-text .sub-book-info{

    padding-left:50rpx;
    height:70%;
    position: relative;
}



.free .book-text .sub-book-info text{

  display: block;
}


/*图片信息*/
.free .book-img{

  float:left;
  width:25%;
  height:100%;

}

.free .book-img image{

  width:75%;
  margin-top:28%;
}


.free .sub-book-info .main-title{

  font-size:1.3rem;
  margin-top:10rpx;

}


.free .sub-book-info .sub-title{

  font-size:1rem;
  margin-top:5rpx;
}

.free .sub-book-info .read-time{
  
    font-size:0.7rem;
    position: absolute;
    bottom:35rpx;
    width:50%;
    line-height:40rpx;
}


.free .sub-book-info .read-time image{

    width:25rpx;
    float:left;
    margin-right:10rpx;
}