/* pages/user/center/center.wxss */
.login-bg{
    height:100vh;
    width:100vw;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    position: fixed;
    top:0;
    left:0;
    border:none;
    overflow: hidden;
}

.login-bg .logo{
	width:100%;
	position: fixed;
	top:15vh;
	left:0;
	text-align: center;
	margin:auto;
}


.login-bg .logo image{

	width:35%;
	max-width: 120rpx;
	display: block;
	margin:auto;
}

.login-bg .login-btn{
	position: fixed;
	bottom:15vh;
	left: 0;
	width:100%;
	text-align: center;
}


.login-bg .login-btn button{

	display: block;
	width:60%;
	max-width:430rpx;
	margin:auto;
	background-color:#FFB800;
	color:#fff;
	line-height:100rpx;
	border-radius: 50rpx;
}