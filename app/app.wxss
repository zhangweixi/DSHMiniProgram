/*页面通用标题*/
.page-title{
  display: flex;
  line-height:1.5rem;
  margin-top:40rpx;
  margin-bottom:40rpx;
}

.page-title .title{

  font-size:1.2rem;
  color:#151515;
}

.page-title .empty{
  flex: 1;
}

.page-title .detail{
    color:#8A8A8A;
    font-size:.8rem;
}

/*弹窗*/
.model-bg{
  background-color:rgba(0,0,0,.4);

  /*opacity: 0.5;*/
  position: fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  z-index: 10000;

}

.model-box{
  position: fixed;
  width:80%;
  min-height:200px;
  left:10%;
  top:30vh;
  background: #fff;
  border-radius: 10rpx;
  z-index: 10001;
}