/*页面容器*/
.page-container{

  margin-right:25rpx;
  margin-left:25rpx;

  
}

/*页面通用标题*/
.page-title{
  display: flex;
  line-height:1.5rem;
  margin-top:40rpx;
  margin-bottom:40rpx;
}

.page-title .title{

  font-size:1.2rem;
  color:#151515;
}

.page-title .empty{
  flex: 1;
}

.page-title .detail{
    color:#8A8A8A;
    font-size:.8rem;
}

/*弹窗*/
.model-bg{
  background-color:rgba(0,0,0,.4);

  /*opacity: 0.5;*/
  position: fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  z-index: 10000;

}

.model-box{
  position: fixed;
  width:80%;
  min-height:200px;
  left:10%;
  top:30vh;
  background: #fff;
  border-radius: 10rpx;
  z-index: 10001;
}

toast{

    z-index:1000;
}

/* 提示对话框 */
.dialog{
    width:100vw;
    height:100vh;
    position: fixed;
    top:0;
    left:0;
    z-index:1000;
    display: flex;
    flex-direction: column;

}

.dialog .dialog-box{
    width:260rpx;
    height:260rpx;
    background:RGBA(60, 60, 60, 0.9);
    border-radius: 20rpx;
    margin:auto;
}

.dialog .dialog-blank{
    flex:1;

}

.dialog .dialog-img{
    display: block;
    width:90rpx;
    margin:auto;
    margin-top:40rpx;
}

.dialog .dialog-msg{
    color:#fff;
    text-align: center;
    margin-top:40rpx;
    font-size:1rem;
}