.book-list{

  position: relative;
  border-radius: 5rpx;
  margin-bottom:20rpx;

}

.book-list image.bg-img {
  width: 100%;
}
.book-list .content {
  margin-top: 40rpx;
}

.book-list .book-list {
  position: relative;
  border-radius: 5rpx;
  margin-bottom: 20rpx;
}

.book-list .bg-img {
  display: block;
}

.book-list .book-info {
  position: absolute;
  height:100%;
  width:100%;
  top:0;
  left:0;
  display: flex;
  align-items: center;
}

/*文字信息*/
.book-list .book-text {
  
  height: 100%;
  color: #fff;
  width:78%;
}

/*分类标签*/
.book-list .tag {
  height: 30%;
}

.book-list .tag .tag-name {
  font-size: .7rem;
  padding-left: 10rpx;
  line-height: 9vw;
}
/*标题信息*/
.book-list .book-text .sub-book-info {
  padding-left: 50rpx;
  height: 70%;
  position: relative;
}
.book-list .book-text .sub-book-info text {
  display: block;
}


/*图片信息*/

.book-list .book-img image {
  width:20vw;
  margin-right: 20rpx;
}


.book-list .sub-book-info .main-title {
  font-size: 1.3rem;
  margin-top: 5rpx;
  line-height: 7vw;
}

.book-list .sub-book-info .main-title.small{

  font-size:.9rem;
}

.book-list .sub-book-info .sub-title {
  font-size: 1rem;
  padding:2vw 0;
  line-height: 6vw;
}
.book-list .sub-book-info .sub-title.small{
  font-size: .85rem;
}
.book-list .sub-book-info .read-time {
  font-size: 0.7rem;
  display: flex;
  align-items: center;
}

.book-list .sub-book-info .read-time image {
  width: 25rpx;  
  margin-right:7rpx;
}

.book-list .sub-book-info .read-time text{
  flex: 1;
  border-top:10rpx solid rgba(0,0,0,0);

}