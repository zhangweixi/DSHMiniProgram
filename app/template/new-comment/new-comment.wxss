
/*新评论输入框*/
.new-comment-input-bg{
	position: fixed;
	top:0;
	left:0;
	width:100%;
	height:100%;
	background: rgba(0,0,0,0.5);
	display: flex;
	flex-direction: column;
	z-index: 10000;
}

.new-comment-input-bg .empty{
	flex: 1;
}


.new-comment-input {
	width:100%;
	background: #fff;
}


.new-comment-input .title{
	text-align: center;
	color:#8A8A8A;
	line-height:80rpx;

}

.new-comment-input .area{
	border-bottom: 1px solid RGBA(0, 0, 0, 0.07);
	border-top: 1px solid RGBA(0, 0, 0, 0.07);
	padding:20rpx;
	display: block;
	height:100px;
	
}



.new-comment-input textarea{
	display: block;
	height:100px;
	width:100%;
	overflow: scroll;
}



.new-comment-input .btn{
	text-align: right;
	overflow: hidden;

}


.new-comment-input .btn button{
	text-align: right;
	color:#FF9C00;
	line-height: 80rpx;
	padding-right:15px;
	background: #fff;
	border:none;
	border-radius: 0;
	box-shadow: none;
	width:250rpx;
	float: right;
}

.new-comment-input .btn button::after {
  border: 0;
}