
/*问题列表*/
.quest-list{
	display: flex;
	padding:20rpx 0;

}

.quest-list .head{
	width:90rpx;
	margin-right: 20rpx;
}

.quest-list .quest-content{
	flex:1;
}


.quest-list .head image{
	width:100%;
	border-radius: 100%;
}

.quest-list .nametime{
	color:#8A8A8A;
	display: flex;
}

.quest-list .time{
	color: #C4C4C4;
	font-size: .9rem;
}

.quest-list .content{
	margin:20rpx 0;
}

.quest-list .current-answer{
	padding:20rpx;
	background: #F5F5F5;
	color:#505050;
	margin-bottom: 20rpx;
	border-radius: 10rpx;
}

.quest-list .answernum{
	display: flex;
}

.quest-list .num{
	color:#8A8A8A;
	font-size:.8rem;
}

